include PUG-Bootstrap/_bootstrap
html
    head
        title=photoLAB
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", crossorigin="anonymous")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/css/bootstrap-multiselect.css")

        style
            include public/stylesheets/main.css
            include public/stylesheets/menu.css
    body
        nav(id='menu' class="navbar navbar-expand-md rounded-0 menu mg-0 font-17 navbar-fixed" style="background: #1e1e1e")
            button(class="navbar-toggler btn btn-outline-light mr-auto" type="button" data-toggle="collapse" data-target="#mynavbar")
                span(class="navbar-toggler-icon")
            a(class="navbar-brand disabled brand" style="color: #efefef!important;") photoLAB

            div(class="collapse navbar-collapse my-navbar ", id="mynavbar")
                div(class="navbar-nav expand font-17")
                    a(class="nav-item nav-link" style="color: #efefef" href="/") головна
                    span(class="sr-only") (current)
                    a(class="nav-item nav-link" style="color: #efefef" href='/help') про нас
                button(class="btn btn-outline-light float-rightt", type='button', data-toggle="modal", data-target='#reg_modal') Реєстрація
                button(class="btn btn-outline-warning float-rightt", type='button', data-toggle="modal", data-target='#entry_modal') Вхід






    div(id="entry_modal", class="modal fade font-17", role="dialog", aria-hidden="true")
        div(class="modal-dialog")
            div(class="modal-content" )
                div(class="modal-body")
                    button(type="button" class="close" data-dismiss="modal") &times;
                    form(method="POST", class="mx-auto font-17", action="/login" )
                        +input("text","","Логін", "Логін",name='login', required)
                        +input("password","","Пароль", "Пароль",name='password', required)
                        button(type="submit" class="btn btn-warning btn-block font-17" ) Вхід

    div(id="reg_modal", class="modal fade font-17", role="dialog", aria-hidden="true")
        div(class="modal-dialog")
            div(class="modal-content" )
                div(class="modal-body")
                    nav
                        div(class="nav nav-tabs font-17" id="nav-tab" role="tablist")
                            a(class="nav-item nav-link black active" id="client_reg_tab" data-toggle="tab" href="#client_reg" role="tab" aria-controls="client_reg" aria-selected="true") Клієнт
                            a(class="nav-item nav-link black" id="ph_reg_tab" data-toggle="tab" href="#ph_reg" role="tab" aria-controls="ph_reg" aria-selected="false") Фотограф

                    div(class="tab-content" id="nav-tabContent")
                        div(class="tab-pane show active" id="client_reg" role="tabpanel" aria-labelledby="client_reg_tab")
                            form(id="registry_form", method="POST", class="mx-auto needs-validation", action="/register" onsubmit="return validateRegistry()")
                                div(class="form-group")
                                    label(for="reg_username")
                                    input(type="text", id="reg_username", class="form-control", placeholder="Ім'я користувача", name="reg_username")
                                    small(class="text-muted") Використовуйте літери та цифри для введення імені
                                    div(class="invalid-feedback") Некоректно введене ім'я користувача
                                div(class="form-group")
                                    label(for="reg_email") Електронна пошта
                                    input(type="text", id="reg_email", class="form-control", placeholder="Електронна пошта", name="reg_email")
                                    div(class="invalid-feedback") Некоректно введена електронна пошта
                                div(class="form-group")
                                    label(for="reg_city") Місто
                                    input(type="text", id="reg_city", class="form-control", placeholder="Місто", name='reg_city')
                                    div(class="invalid-feedback") Некоректно вказана назва міста
                                +input("password","reg_password","","Пароль", 'reg_password')
                                +input("password","reg_password2","","Повторіть пароль:", 'reg_password2')
                                input(type="submit" class="btn btn-info btn-block" value="Зареєструватись!")


                        div(class="tab-pane fade" id="ph_reg" role="tabpanel" aria-labelledby="ph_reg_tab")
                            form(method="POST", class="mx-auto ", action="/registerph")
                                div(class="row")
                                    div(class="form-group col")
                                        label(for="input_email" class="non-bold") Електронна пошта
                                        input(type="email" id="input_email" class="form-control " )
                                    div(class="form-group col")
                                        label(for="input_username" class="non-bold") Ім'я користувача (нікнейм)
                                        input(type="text" class="form-control" id="input_username"  )
                                div(class="row")
                                    div(class="form-group col")
                                        label(for="input_name" class="non-bold") Прізвище
                                        input(type="text" class="form-control" id="input_surname"  )
                                    div(class="form-group col")
                                        label(for="input_name" class="non-bold") Ім'я
                                        input(type="text" class="form-control" id="input_name"  )
                                div(class="row")
                                    div(class="form-group col" )
                                        label(for="input_name" class="non-bold") По-батькові
                                        input(type="text" class="form-control" id="input_fathername"  )
                                    div(class="form-group col")
                                        label(for="input_name" class="non-bold") Місто
                                        input(type="text" class="form-control" id="input_city" )

                                .panel.panel-default()
                                    .panel-heading Вкажіть все, чим займаєтесь:
                                    .panel-body(style="padding-left:30px!important")
                                        each t in types
                                            div(class="form-group custom-checkbox ")
                                                input(type='checkbox',id="check"+t.name,class="custom-control-input " )
                                                label(for="check"+t.name, class="custom-control-label non-bold")=t.name
                                div(class="row")
                                    div(class="form-group col")
                                        label(for="input_price" class="non-bold") Середня ціна зйомки($)
                                        input(type="number" class="form-control" id="input_price" )
                                    div(class="form-group col")
                                        label(for="input_years", class="non-bold") Стаж
                                            select(class="form-control" id="input_years")
                                                option до 1 року
                                                option 2 роки
                                                option 3 роки
                                                option 4+ роки
                                div(class="form-group")
                                    label(for="input_job" class="non-bold") Місце роботи (організація)
                                    input(type="text" class="form-control" id="input_job" )
                                div(class="form-group")
                                    label(for="input_password" class="non-bold") Пароль
                                    input(type="password" class="form-control text-muted" id="input_password"  )
                                div(class="form-group")
                                    label(for="input2_password" class="non-bold") Повторіть пароль
                                    input(type="password" class="form-control text-muted" id="input2_password"  )

                                button(type="submit" class="btn btn-info btn-block ") Зареєструватись!

    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js", integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js", integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js", integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/js/bootstrap-multiselect.js")
    script(src="/public/javascripts/validation.js")
